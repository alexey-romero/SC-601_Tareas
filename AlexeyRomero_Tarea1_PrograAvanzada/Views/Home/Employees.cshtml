        <tr>
            <th>ID</th>
            <th>First Name</th>
            <td>Last Name</td>
        </tr>
    </table>
    @if (Model != null)
    {
        @foreach (var entity in Model)
        {
            <tr>
                <td>@entity.Id</td>
                <td>@entity.FirstName</td>
                <td>@entity.LastName</td>
            </tr>
        }
    } 
</div>