@{
    ViewData["Title"] = "Alexey's 1st Assignment";
}

@model IEnumerable<AlexeyRomero_Tarea1_PrograAvanzada.Models.Employee>

<h1>Employee Directory</h1>

<div class="text-center">
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var entity in Model)
                {
                    <tr>
                        <td>@entity.Id</td>
                        <td>@entity.FirstName</td>
                        <td>@entity.LastName</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">No data available</td>
                </tr>
            }
        </tbody>
    </table>
</div>
